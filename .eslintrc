{
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended"
    ],

    "env": {
        "browser": true,
        "jest/globals": true
    },
    "rules":  {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "comma-dangle": "off",
        "no-continue": "warn",
        "no-plusplus": "off",
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-filename-extension": "off"
    },
    "plugins": ["flowtype", "jest"]
}
